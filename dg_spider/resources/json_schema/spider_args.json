{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "spider": {
      "type": "object",
      "properties": {
        "website_id": {"type": "integer"},
        "started_by_scrapy": {"type": "boolean"},
        "save_to_mysql": {"type": "boolean"}
      },
      "required": ["website_id", "started_by_scrapy", "save_to_mysql"]
    },
    "timer": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "crawl_until_datetime": { "$ref": "common.json#/definitions/iso_datetime"}
      },
      "required": ["enabled", "crawl_until_datetime"],
      "additionalProperties": false
    },
    "audit": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "audit_id": {"type": "integer"}
      },
      "required": ["enabled", "audit_id"],
      "additionalProperties": false
    },
    "proxy": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "mode": {"type": "string", "enum": ["lab", "temp"]},
        "temp": {
          "type": "object",
          "properties": {
            "ip": {"type": "string"},
            "port": {"type": "integer"}
          },
          "required": ["ip", "port"]
        }
      },
      "required": ["enabled", "temp"],
      "additionalProperties": false
    }
  },
  "required": ["spider", "db", "timer", "audit", "proxy"],
  "additionalProperties": false
}
